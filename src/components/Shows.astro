---
import type { Shows } from "../lib/shows";

interface Props {
  show: Shows;
}
const { show } = Astro.props;
const { place, date, image, tickets } = show;
---

<div class="flex gap-5 justify-evenly mt-6">
  <div
    id="card"
    class="h-48 w-48 rounded bg-cover bg-center bg-no-repeat flex flex-col"
    style=`background-image: url(${image});`
  >
    <div class="flex-grow"></div>
    <div class="h-16 w-48 bottom-0 bg-[white]/30 backdrop-blur flex flex-col">
      <h3 class="text-left mt-3 ml-3 text-sm">{place}</h3>
      <h4 class="text-left ml-3 mb-5 text-xs text-gray-900 m-auto">{date}</h4>
      <a class="absolute bottom-3" href={tickets}>
        <div
          class="bg-green-600 rounded px-2 py-1 ml-24
           mr-3 flex justify-center items-center"
        >
          <p class="font-semibold text-xs">Get Tickets</p>
        </div>
      </a>
    </div>
  </div>
</div>
